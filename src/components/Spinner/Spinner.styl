.spinner
  width: 13px
  height: 13px
  animation: spin 10s linear infinite

  div
    box-sizing: border-box
    display: block
    position: absolute
    width: 100%
    height: 100%
    border: 2px solid transparent
    border-top-color: #000
    border-radius: 50%
    animation: spin 1.2s cubic-bezier(0.3, 0, 0.5, 1) infinite
  
    &:nth-child(1)
      animation-delay: -0.35s

    &:nth-child(2)
      animation-delay: -0.22s

    &:nth-child(3)
      animation-delay: -0.11s

@keyframes spin
  100%
    transform: rotate(360deg)
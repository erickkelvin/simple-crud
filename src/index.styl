html, body
  height: 100%

body
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  background: #00c8b3
  font-family: sans-serif

#root
  background: #fff
  padding: 20px
  border-radius: 5px

#credits
  margin-top: 5px
  font-size: 10px
  color: #fff

.pageContainer
  animation: .5s showPage

@keyframes showPage
  0%
    opacity: 0
  100%
    opacity: 1

h3
  display: inline-block
  margin-top: 5px